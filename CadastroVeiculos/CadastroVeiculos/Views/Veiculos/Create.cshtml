@model VeiculoViewModel

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Placa"></label>
        <input asp-for="Placa" class="form-control" />
        <span asp-validation-for="Placa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Renavam"></label>
        <input asp-for="Renavam" class="form-control" />
        <span asp-validation-for="Renavam" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Chassi"></label>
        <input asp-for="Chassi" class="form-control" />
        <span asp-validation-for="Chassi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnoFabricacao"></label>
        <input asp-for="AnoFabricacao" class="form-control" />
        <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnoModelo"></label>
        <input asp-for="AnoModelo" class="form-control" />
        <span asp-validation-for="AnoModelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoCombustivel"></label>
        <select asp-for="TipoCombustivel" asp-items="Html.GetEnumSelectList<TipoCombustivel>()" class="form-control">
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="TipoCombustivel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorSeguro"></label>
        <input asp-for="ValorSeguro" class="form-control" />
        <span asp-validation-for="ValorSeguro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NomeProprietario"></label>
        <input asp-for="NomeProprietario" class="form-control" />
        <span asp-validation-for="NomeProprietario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}